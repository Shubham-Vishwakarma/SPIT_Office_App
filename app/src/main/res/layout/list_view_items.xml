<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_custom_height" >

    <ImageView
        android:id="@+id/list_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/download_icon"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/list_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/list_view_icon"
        android:ellipsize="marquee"
        android:paddingLeft="5dp"
        android:text="Title"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/list_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/list_view_icon"
        android:layout_below="@+id/list_view_title"
        android:ellipsize="marquee"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="Description"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"/>

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:id="@+id/listViewDate"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/list_view_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>